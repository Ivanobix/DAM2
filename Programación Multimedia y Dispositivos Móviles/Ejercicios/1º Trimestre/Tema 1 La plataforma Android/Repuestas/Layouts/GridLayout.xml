<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="5"
    android:layout_column="3"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="ANDROID VERSIONS"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/btnLollipop"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Lollipop"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"/>

    <Button
        android:id="@+id/btnKitkat"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Kitkat"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"/>

    <Button
        android:id="@+id/btnJellyBean"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Jelly Bean"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:layout_column="1"/>

    <Button
        android:id="@+id/btnICS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:text="ICS" />

    <Button
        android:id="@+id/btnHoneyComb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="HoneyComb"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:layout_column="0"/>

    <Button
        android:id="@+id/btnGingerBread"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="GingerBread"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:layout_column="1"/>

    <Button
        android:id="@+id/btnFroyo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Froyo"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:layout_column="2"/>

    <Button
        android:id="@+id/btnEclair"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Eclair"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:layout_column="0"/>

    <Button
        android:id="@+id/btnDonut"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Donut"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_column="1"/>

    <Button
        android:id="@+id/btnCupcake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:text="Cupcake" />


</GridLayout>